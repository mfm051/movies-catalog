<h1> <%= @director.name %> </h1>
<%= link_to 'Editar', edit_director_path(@director) %>
<%= link_to 'Remover', director_path(@director), data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" } %>
<% if @director.movies.any? %>
  <h2>Filmes</h2>
  <ul>
    <% @director.movies.each do |movie| %>
      <li> <%= link_to movie.title, movie_path(movie) %> </li>
    <% end %>
  </ul>
<% end %>