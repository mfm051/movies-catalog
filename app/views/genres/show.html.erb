<h1> <%= @genre.name %> </h1>
<%= link_to 'Editar', edit_genre_path(@genre) %>
<%= link_to 'Remover', genre_path(@genre), data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" } %>
<% if @genre.movies.any? %>
  <h2>Filmes</h2>
  <ul>
    <% @genre.movies.each do |movie| %>
      <li> <%= link_to movie.title, movie_path(movie) %> </li>
    <% end %>
  </ul>
<% end %>