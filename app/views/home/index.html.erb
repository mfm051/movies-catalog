<h1>Catálogo de filmes</h1>
<% if @genres.any? %>
  <h2>Gêneros</h2>
  <ul>
    <% @genres.each do |genre| %>
      <li>
        <div>
          <h3><%= genre.name %></h3>
          <%= link_to 'Editar', edit_genre_path(genre) %>
          <%= link_to 'Remover', genre_path(genre), data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" } %>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
<%= link_to "Cadastrar gênero", new_genre_path %>