<h1>Catálogo de filmes</h1>
<% if @genres.any? %>
  <h2>Gêneros</h2>
  <ul>
    <% @genres.each do |genre| %>
      <li>
        <div>
          <h3><%= genre.name %> </h3>
          <%= link_to 'Detalhes', genre_path(genre) %>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
<%= link_to "Cadastrar gênero", new_genre_path %>
<% if @directors.any? %>
  <h2>Diretores</h2>
  <ul>
    <% @directors.each do |director| %>
      <li>
        <div>
          <h3><%= director.name %> </h3>
          <%= link_to 'Detalhes', director_path(director) %>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
<%= link_to "Cadastrar diretor", new_director_path %>